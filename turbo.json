{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "check-types": { "dependsOn": ["^check-types"] },
    "lint": { "dependsOn": ["^lint"] },
    "build": {
      "dependsOn": ["check-types", "lint", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
